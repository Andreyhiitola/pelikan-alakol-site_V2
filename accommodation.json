// –†–ï–ù–î–ï–†–ò–ù–ì ACCOMMODATION (–ù–û–ú–ï–†–ê)
// ========================================

function renderAccommodation(data) {
  const container = document.getElementById('roomsContainer');
  
  // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
  if (!container) {
    console.error('‚ùå –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä roomsContainer –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ HTML');
    return;
  }

  // –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–∞–Ω–Ω—ã—Ö
  if (!data) {
    console.error('‚ùå –ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –¥–ª—è accommodation');
    container.innerHTML = '<p style="color: red;">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö –Ω–æ–º–µ—Ä–æ–≤</p>';
    return;
  }

  // –ï—Å–ª–∏ –¥–∞–Ω–Ω—ã–µ —ç—Ç–æ –º–∞—Å—Å–∏–≤ –Ω–∞–ø—Ä—è–º—É—é
  let accommodations = Array.isArray(data) ? data : data.accommodations;
  
  if (!accommodations || accommodations.length === 0) {
    console.error('‚ùå –ú–∞—Å—Å–∏–≤ accommodations –ø—É—Å—Ç –∏–ª–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω');
    container.innerHTML = '<p style="color: red;">–ù–æ–º–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã</p>';
    return;
  }

  // –†–µ–Ω–¥–µ—Ä–∏–Ω–≥ –Ω–æ–º–µ—Ä–æ–≤
  container.innerHTML = accommodations.map(room => `
    <div class="scroll-item">
      <div class="photo-overlay"><i class="fas fa-expand"></i></div>
      ${room.image ? `<img src="${room.image}" alt="${room.name}" style="height: 250px; object-fit: cover;">` : '<img src="https://via.placeholder.com/400x250?text=Room" style="height: 250px; object-fit: cover;">'}
      <h3>${room.icon || 'üè†'} ${room.name}</h3>
      <p>${room.description}</p>
      ${room.amenities ? `
        <ul class="infra-features">
          ${room.amenities.map(a => `<li>‚úì ${a}</li>`).join('')}
        </ul>
      ` : ''}
      <p><strong style="color: var(--primary-green); font-size: 1.1em;">–æ—Ç ${room.price} / –Ω–æ—á—å</strong></p>
    </div>
  `).join('');

  console.log('‚úÖ Accommodation –∑–∞–≥—Ä—É–∂–µ–Ω—ã –∏ –æ—Ç—Ä–∏—Å–æ–≤–∞–Ω—ã', accommodations.length, '–Ω–æ–º–µ—Ä–æ–≤');
}

// –≠–∫—Å–ø–æ—Ä—Ç —Ñ—É–Ω–∫—Ü–∏–∏ –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –≤ main.js
window.renderAccommodation = renderAccommodation;
